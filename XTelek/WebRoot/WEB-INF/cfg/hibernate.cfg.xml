<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

	<session-factory>
		<!-- Hibernate方言  用于进行HQL向SQL的转换处理-->
		<property name="dialect">org.hibernate.dialect.Oracle9Dialect</property>
		
		<!-- 数据库连接参数	 -->
		<property name="hibernate.connection.url">jdbc:oracle:thin:@ganhaijie-PC:1521:GAN</property>
		<property name="hibernate.connection.username">scott</property>
		<property name="hibernate.connection.password">123</property>
		<property name="hibernate.connection.driver_class">
			oracle.jdbc.OracleDriver
		</property>
	
		<!-- JNDI配置数据库使用的数据库连接池 -->
		<property name="hibernate.connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>
		<property name="hibernate.c3p0.min_size">5</property>
		<property name="hibernate.c3p0.max_size">30</property>
		<property name="hibernate.c3p0.timeout">1800</property>
		<property name="hibernate.c3p0.max_statements">50</property>
		<property name="hibernate.c3p0.idle_test_period">120</property>
		<property name="hibernate.c3p0.acquire_increment">2</property>
		<!-- JNDI配置数据库使用的数据库连接池 -->
		
		<property name="show_sql">true</property>
		<property name="formate_sql">true</property>

		<property name="myeclipse.connection.profile">orcl</property>

		
		<!-- 映射类的配置文件 -->
		<mapping resource="com/telek/ghj/mapping/TAdmin.hbm.xml" />
	</session-factory>

</hibernate-configuration>